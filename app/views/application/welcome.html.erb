<h1>Welcome, <%= @user.username %>!</h1>

<h3>Your reviews, at a glance.</h3>
<div id="ajax-show"></div>

<ul>
    <% @user.reviews.limit(3).each do |review| %>
        <li>
            <b>Title:</b> <%= review.show.title %>
            <b> - Rating:</b> <%= review.rating %>
            <b> - Comment:</b> <%= review.comment %>
            <%= link_to "Edit This Review", 
            edit_review_path(review) %>
        </li>
        </br>
    <% end %>
</ul>
<p>Please select an option from the list.</p>

<ul>
    <li><%= link_to "Your Shows", user_shows_path(@user) %></li>
    <li><%= link_to "Add a New Show", new_user_show_path(@user) %></li>
    <li><%= link_to "Your Reviews", reviews_path %></li>
</ul>

