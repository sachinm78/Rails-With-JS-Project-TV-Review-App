<% if @review.errors %>
  <%  @review.errors.full_messages.each do |error| %>
    <%= error %>
  <%end%>
<%end%>

<%= form_for(@review, method: :patch, html: {id: :review_form}) do |f| %> 
    <%= f.label :rating %>
    <%= f.number_field :rating, {max: 5} %><br />
    <%= f.label :comment %>
    <%= f.text_field :comment %><br />
    <br />
    <%= f.submit %>
<% end %>