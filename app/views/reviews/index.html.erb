<ul>
    <li><%= link_to "Your Shows", user_shows_path(@user) %></li>
    <li><%= link_to "Add a New Show", new_user_show_path(@user) %></li>
    <li><%= link_to "Five Star - Not Rated Shows", custom_query_path %>
</ul>

<h1><%= current_user.username %>'s Reviews Index</h1>
<button id="js-index">Reviews Index</button>
<div id="js-reviews-index"></div>

<ol>
    <% @user.reviews.each do |review| %>
    
        <li>
            <b>Title:</b> <%= link_to review.show.title, review_path(review) %>
            <b> - Rating:</b> <%= review.rating %>
            <b> - Comment:</b> <%= review.comment %>
            <%= link_to "Edit This Review", 
            edit_review_path(review) %>
        </li>
        </br>
    <% end %>
</ol>